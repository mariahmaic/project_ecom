<p style="color: green"><%= notice %></p>

<%# <%= render @product %>

<h2><%= link_to @product.name, store_product_path(@product) %></h2>
    <div class="description">
      <%= @product.description %>
    </div>
    <% if @product.category %>
      <p>
        <strong>Category:</strong> <%= @product.category.name %>
      </p>
    <% end %>

<% if @product.image.present? %>
      <%= link_to image_tag(@product.image, class: "img-fluid"), @product %>
<% end %>

<p class="price">
      <%= number_to_currency @product.price%>
</p>

<div>
  <%= link_to "Edit this product", edit_product_path(@product) %> |
  <%= link_to "Back to products", products_path %>

  <%= button_to "Destroy this product", @product, method: :delete, class:"btn btn-danger" %>
</div>
