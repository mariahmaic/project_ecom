 <section class="product column">
    <h2><%= link_to product.name, store_product_path(product) %></h2>
    <div class="description">
      <%= product.description %>
    </div>
    <% if product.category %>
      <p>
        <strong>Category:</strong> <%= product.category.name %>
      </p>
    <% end %>
    <% if product.image.present? %>
      <%= link_to image_tag(product.image, class: "img-fluid"), product %>
    <% end %>
    <p class="price">
      <%= number_to_currency product.price%>
    </p>
    <p><%= link_to "Show this product", product, class:"btn btn-secondary" %></p>
    <% if @cart&.include?(product) %>
      <%= link_to 'remove from cart', remove_from_cart_path(product), method: :delete, class:"btn btn-danger" %>
    <% else %>
      <%= link_to 'add to cart', add_to_cart_path(product.id), method: :post, class:"btn btn-primary" %>
    <% end %>
  </section>